version: 1.0.{build}

image:
- Ubuntu2004

configuration:
- Debug
- Release

environment:
  matrix:
  - DBUILD_SHARED_LIBS: 0
  - DBUILD_SHARED_LIBS: 1

for:
-
  matrix:
    only:
      - image: Ubuntu
  before_build:
    - mkdir -p build; cd build; cmake -DCMAKE_BUILD_TYPE=%CONFIGURATION% ..
  build_script:
    - make

build:
  verbosity: normal

